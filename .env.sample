# 投稿取得元Mastodon設定
MASTODON_BASE_URL=https://mstdn.plusminus.io
MASTODON_ACCESS_TOKEN=
MASTODON_USERNAME=@mohemohe  # ユーザー名を指定（例: foobar または @foobar）

# ソース設定
MAX_STATUSES=3000      # キャッシュ件数
RANDOM_SAMPLE_SIZE=50  # 抽出件数

# 投稿先Botアカウント設定
BOT_POST_ENABLED=true                    # 投稿機能の有効/無効 (true/false)
BOT_BASE_URL=https://mstdn.plusminus.io  # Botアカウントが存在するインスタンスのURL
BOT_ACCESS_TOKEN=                        # Botアカウントのアクセストークン

# LLMプロバイダ設定
LLM_PROVIDER=lmstudio # gemini, groq, lmstudio, anthropic, openai

# Google Gemini設定
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Groq設定
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-120b

# LM Studio設定
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=openai/gpt-oss-20b
# LM_STUDIO_API_KEY=

# Anthropic設定
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
# ANTHROPIC_BASE_URL=  # カスタムベースURL（オプション）

# OpenAI設定（OpenAI互換APIにも使用可能）
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=  # カスタムベースURL（オプション、OpenAI互換APIで使用）

# 2-pass LLM設定
TWO_PASS_MODE=false  # 2-passモードの有効/無効 (true/false)
TWO_PASS_LLM_PROVIDER=  # 2pass目のLLMプロバイダー（省略時は1pass目と同じ）